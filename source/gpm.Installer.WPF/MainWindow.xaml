<Window x:Class="gpm.Installer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gpm.Installer.WPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        Loaded="Window_Loaded"
        >

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="0" Margin="50" >
            
        </ProgressBar>

        <ScrollViewer Grid.Row="1"
                      >
            <TextBlock Background="LightYellow"
                   Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                   ScrollViewer.CanContentScroll="True"
                   />
        </ScrollViewer>
    </Grid>
</Window>
